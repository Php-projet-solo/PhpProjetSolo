        <input required type="text" id="nomPersonneContacter" name="nomPersonneContacter">
        <label for="nomPersonneContacter">Nom du contact :</label>
    </div>

    <div class="InputStyleContainer">
        <input required type="email" id="emailContacter" name="emailContacter">
