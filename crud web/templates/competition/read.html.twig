<h1>Liste des compétitions</h1>
<a href="/crud web/index.php?action=create" class="btn btn-primary">Créer une nouvelle compétition</a>
<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Description</th>
        <th>Date</th>
        <th>Prix de l'entrée</th>
        <th>Latitude</th>
        <th>Longitude</th>
        <th>Nom de la personne à contacter</th>
        <th>Email de contact</th>
        <th>Photo</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    {% for competition in competitions %}
        <tr>
            <td>{{ competition.id_competition }}</td>
            <td>{{ competition.nom|e }}</td>
            <td>{{ competition.description|e }}</td>
            <td>{{ competition.date|e }}</td>
            <td>{{ competition.prixentree|e }}</td>
            <td>{{ competition.latitude|e }}</td>
            <td>{{ competition.longitude|e }}</td>
            <td>{{ competition.nompersonnecontacter|e }}</td>
            <td>{{ competition.emailcontacter|e }}</td>
            <td>
                {% if competition.photo %}
                    <img src="data:image/jpeg;base64,{{ competition.photo }}" alt="Photo" width="100">
                {% else %}
                    Pas d'image valable
                {% endif %}
            </td>
            <td>
                <a href="/crud web/index.php?action=update&id={{ competition.id_competition }}"
                   onclick="return confirm('Voulez-vous vraiment modifier cette compétition ?')">Modifier</a>
                <a href="/crud web/index.php?action=delete&id={{ competition.id_competition }}&csrf_token={{ csrf_token }}"
                   onclick="return confirm('Voulez-vous vraiment supprimer cette compétition ?')">Supprimer</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
